<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/nickname_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:text="Hi! Welcome to our application"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/profile_img"
        android:src="@drawable/ic_baseline_tag_faces_24"

        />
    <TextView
        android:id="@+id/desc_id"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Hello everyone! , My name is Bernadus Alvin. I'm come from Indonesia and studying Informatic Engineering at Atma Jaya University. Right now i'm 20 years old and hoping to keep learning programming"

        />

    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#00bdd3"
        android:text="NEXT"
        android:onClick="next"/>


</LinearLayout>